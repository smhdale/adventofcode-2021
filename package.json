{
  "name": "adventofcode-2021",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/smhdale/adventofcode-2021",
  "author": "Samuel Dale <smhdale@live.com.au>",
  "license": "Unlicense",
  "scripts": {
    "prepare": "husky install",
    "day": "bin/index.ts",
    "lint": "eslint . --ext ts"
  },
  "dependencies": {
    "@types/node": "^16.11.12",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "chalk": "^4.1.2",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.3"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": 2
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "useTabs": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "**/*.ts": [
      "yarn lint --fix"
    ]
  },
  "volta": {
    "node": "16.13.1"
  }
}
